<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 4.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xf.college.dao.laboratory.CommonEquipmentDao">
    <resultMap id="commonEquipment" type="com.xf.college.model.laboratory.CommonEquipment">
        <id column="E_ID" property="id"></id>
        <result column="E_NAME" property="name"></result>
        <result column="E_TYPE_ID" property="typeId"></result>
        <result column="E_VALID" property="valid"></result>
        <result column="E_USED_COUNT" property="usedCount"></result>
        <result column="E_DES" property="des"></result>
        <result column="E_REMARK" property="remark"></result>
        <result column="E_IMGS" property="imgs"></result>
        <result column="E_BEGIN_TIME" property="beginTime"></result>
    </resultMap>

    <insert id="add" parameterType="com.xf.college.model.laboratory.CommonEquipment">
        INSERT INTO
          common_equipment
        VALUES
          (#{id},#{name},#{typeId},#{valid},#{usedCount},#{des},#{remark},#{imgs},#{beginTime})
    </insert>

    <select id="select" resultMap="commonEquipment">
        SELECT * FROM common_equipment WHERE E_ID=#{id}
    </select>
    <select id="selectAll">
        SELECT * FROM common_equipment
    </select>
    <select id="selectByName" resultMap="commonEquipment">
        SELECT * FROM common_equipment WHERE E_NAME=#{name}
    </select>

    <update id="update" parameterType="com.xf.college.model.laboratory.CommonEquipment">
        UPDATE
          common_equipment
        SET
          E_NAME=#{name},E_TYPE_ID=#{typeId},E_VALID=#{valid},E_USED_COUNT=#{usedCount}
          ,E_DES=#{des},E_REMARK=#{remark},E_IMGS=#{imgs},E_BEGIN_TIME=#{beginTime} WHERE E_ID = #{id}
    </update>

    <delete id="delete">
        DELETE FROM common_equipment WHERE E_ID=#{id}
    </delete>
</mapper>