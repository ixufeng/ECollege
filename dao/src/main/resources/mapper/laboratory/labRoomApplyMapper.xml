<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 4.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xf.college.dao.laboratory.LabRoomApplyDao">
    <resultMap id="labApply" type="com.xf.college.model.laboratory.LabApply">
        <id property="id" column="id"></id>
        <result column="lab_id" property="labId"></result>
        <result column="id" property="id"></result>
        <result column="user_id" property="userId"></result>
        <result column="create_time" property="createTime"></result>
        <result column="state" property="state"></result>
        <result column="begin_time" property="beginTime"></result>
        <result column="end_time" property="endTime"></result>
        <result column="handler_id" property="handlerId"></result>
        <result column="des" property="des"></result>
    </resultMap>


    <insert id="add" parameterType="com.xf.college.model.laboratory.LabApply">
       INSERT INTO `laboratory_apply`(`lab_id`, `userId`, `create_time`, `state`, `begin_time`, `end_time`, `handler_id`, `des`)
            VALUES
                (#{labId},#{userId},#{createTime},#{state},#{beginTime},#{endTime},#{handlerId},#{des}
    </insert>

    <select id="select" resultMap="labApply">
        SELECT `lab_id`, `id`, `user_id`, `create_time`, `state`, `begin_time`, `end_time`, `handler_id`, `des` FROM `laboratory_apply` WHERE id = #{id}
    </select>

    <select id="selectByUserId" resultMap="labApply">
        SELECT `lab_id`, `id`, `user_id`, `create_time`, `state`, `begin_time`, `end_time`, `handler_id`, `des` FROM `laboratory_apply` WHERE user_id = #{userId}
    </select>

    <select id="selectAll" resultMap="labApply">
        SELECT `lab_id`, `id`, `user_id`, `create_time`, `state`, `begin_time`, `end_time`, `handler_id`, `des` FROM `laboratory_apply` WHERE 1
    </select>


    <update id="update" parameterType="com.xf.college.model.laboratory.LabApply">
        UPDATE `laboratory_apply`
          SET `lab_id`=#{labId},`state`=#{state},
               `begin_time`=beginTime,`end_time`=#{endTime},`des`=#{des} WHERE id={id}
    </update>

    <delete id="delete">
        DELETE FROM `laboratory_apply` WHERE id = #{id}
    </delete>




</mapper>
